<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:background="@drawable/ic_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/imagevew"
            android:layout_marginTop="10dp"
            android:scrollX="10dp"
            android:src="@drawable/ic_icon3"
            android:layout_width="90dp"
            android:layout_height="80dp"></ImageView>
        <TextView
            android:textColor="#ff0"
            android:textStyle="bold"
            android:text="Kiet IT"
            android:layout_marginLeft="10dp"
            android:id="@+id/TEXT_NAME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:textColor="#F44336"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:text="ngokiet68@gmail.com"
            android:id="@+id/TEXT_Gmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:textStyle="bold"
            android:text="Online"
            android:id="@+id/TEXTTrangThai"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

</LinearLayout>